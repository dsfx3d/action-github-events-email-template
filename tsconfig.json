{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react",
    "jsxFactory": "elements.createElement",
    "module": "commonjs",
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["jest", "node"],
    "rootDir": ".",
    "paths": {
      "$lib/*": ["./lib/*"]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./lib",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx",
    "packages/*",
    "lib",
    "codegen.ts"
  ]
}
